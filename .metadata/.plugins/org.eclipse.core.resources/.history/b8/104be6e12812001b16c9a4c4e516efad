#include <avr/io.h>
void INT0_init(void)
{
	SET_BIT(GICR, INT0);
	SET_BIT(MCUCR, ISC01);
	CLEAR_BIT(MCUCR, ISC00);
}
void INT1_init(void)
{
	SET_BIT(GICR, INT1);
	SET_BIT(MCUCR, ISC11);
	SET_BIT(MCUCR, ISC10);

}

void INT2_init(void)
{
	SET_BIT(GICR, INT2);
	CLEAR_BIT(MCUCSR, ISC2);
}



